# 環境設定 (development, production, testing)
ENVIRONMENT=development

# 資料庫設定
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/myapp
DB_ECHO=false

# 安全設定 (生產環境必須使用強密鑰)
SECRET_KEY=your-secret-key-here-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 應用設定
APP_NAME=FastAPI Backend
LOG_LEVEL=INFO
