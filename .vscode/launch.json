{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI Simple Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "justMyCode": true,
      "python": "${workspaceFolder}/backend/.venv/Scripts/python.exe"
    },
    {
      "name": "Python: FastAPI Debug (My Code Only)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/.venv/Scripts/uvicorn.exe",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "justMyCode": true,
      "stopOnEntry": false,
      "subProcess": false
    },
    {
      "name": "Python: FastAPI Debug (All Code)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/.venv/Scripts/uvicorn.exe",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "justMyCode": false,
      "stopOnEntry": false,
      "subProcess": false
    },
    {
      "name": "Vue.js: Debug",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev", "--", "--host", "127.0.0.1"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "Full Stack Debug",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "preLaunchTask": "Start Backend",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"]
    }
  ],
  "compounds": [
    {
      "name": "Launch Full Stack",
      "configurations": [
        "Python: FastAPI Debug (My Code Only)",
        "Vue.js: Debug"
      ],
      "stopAll": true
    }
  ]
}
